<section class="bg-light py-5">
    <div class="container px-5 my-5 px-5">
        <div class="text-center mb-5">
            <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-envelope"></i></div>
            <h2 class="fw-bolder">咨询案件</h2>
            <!--                    <p class="lead mb-0">We'd love to hear from you</p>-->
        </div>

        <div class="row gx-5 justify-content-center">
            <div class="col-lg-6">
                <!-- * * * * * * * * * * * * * * *-->
                <form id="contactForm" class="container" action="/fuda/fdarticles/create" method="post" >
                    <div class="form-floating mb-3">
                        <input class="form-control" id="name" type="text" name="xingming" placeholder="姓 名..."  data-sb-validations="required" />
                        <label for="name">姓 名</label>
                        <div class="invalid-feedback" data-sb-feedback="name:required">姓名 不能空着</div>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="phone" type="text" name="shoujihao" placeholder="您的手机号码..."  data-sb-validations="required" />
                        <label for="phone">您的手机号码</label>
                        <div class="invalid-feedback" data-sb-feedback="phone:required">手机号 不能空着 </div>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="name" type="text" name="sweixin" placeholder="您的微信..."  data-sb-validations="required" />
                        <label for="name">您的微信</label>
                        <div class="invalid-feedback" data-sb-feedback="name:required">微信号 不能空着</div>
                    </div>

                    <!-- Email address input-->
                    <div class="form-floating mb-3">
                        <!--                                <input class="form-control" id="email" type="text" name="youxiang" placeholder="name@example.com" data-sb-validations="required,email" />-->
                        <input class="form-control" id="email" type="text" name="youxiang" placeholder="name@example.com" />
                        <label for="email">您的邮箱</label>
                    </div>
                    <!-- Phone number input-->

                    <!-- Message input-->
                    <div class="form-floating mb-3">
                        <textarea class="form-control" id="message" name="anjiangaishu" rows="10" placeholder="案件概述..." style="height: 10rem" data-sb-validations="required"></textarea>
                        <label for="message">案件概述</label>
                        <div class="invalid-feedback" data-sb-feedback="message:required">请填写 案件概述</div>
                    </div>
                    <!-- Submit Button-->
                    <div>
                        <div id="liveAlertPlaceholder"></div>
                        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>

                        <div style="text-align: center;">
                            <button class="btn btn-primary" type="submit" ><h3>提交</h3></button> </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>