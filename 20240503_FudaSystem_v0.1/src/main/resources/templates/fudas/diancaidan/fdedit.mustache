            <a class="list-group-item list-group-item-action list-group-item-light p-3" href="/fuda/dangjiantuanjian">党建团建</a>
            <a class="list-group-item list-group-item-action list-group-item-light p-3" href="/fuda/lianxiwomen"     >联系我们</a>
            <a class="list-group-item list-group-item-action list-group-item-light p-3" href="/fuda/new"             >在线咨询</a>
        </div>
    </div>
    <!-- Page content wrapper-->
    <div id="page-content-wrapper">
        <!-- Top navigation-->
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <div class="container-fluid">
                <button class="btn btn-primary" id="sidebarToggle">Menu</button>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                        <!--                                <li class="nav-item active"><a class="nav-link" href="#!">Home</a></li>-->
                        <!--                                <li class="nav-item"><a class="nav-link" href="#!">Link</a></li>-->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">账户</a>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/index">登录</a>
                                <!--                                        <a class="dropdown-item" href="#!">退出登录</a>-->
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/fuda">退出登录</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Page content-->
        <div class="container-fluid">
            {{#fuda}}
                <form class="container" action="/fuda/fdarticles/update" method="post">
                    <input name="id" type="hidden" value="{{id}}" />
                    <div class="mb-3">
                        <label class="form-label">姓名</label>
                        <input class="form-control" type="text" name="xingming" value="{{xingming}}"></input>
                    </div>
                    <div class="mb-3">
                        <label  class="form-label">手机号</label>
                        <input class="form-control" type="text" name="shoujihao" value="{{shoujihao}}"></input>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">微信</label>
                        <input class="form-control" type="text" name="sweixin" value="{{sweixin}}" ></input>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">邮箱</label>
                        <input class="form-control" type="text" name="youxiang" value="{{youxiang}}" ></input>
                    </div>
                    <div class="mb-3">
                        <label  class="form-label">案件概述</label>
                        <textarea class="form-control"  name="anjiangaishu" rows="5" >{{anjiangaishu}}</textarea>
                    </div>
                    <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
                    <button type="submit" class="btn btn-primary">提交</button>
                    <a href="/fdarticles/{{fuda.id}}">返回</a>
                </form>
            {{/fuda}}

        </div>
    </div>
</div>
